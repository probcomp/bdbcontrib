{
  "title": "Schema for MML commands to CREATE GENERATOR",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "additionalProperties": false,
  "required": ["metamodel", "columns"],
  "properties": {
    "metamodel": {"type": "string"},
    "columns": {
      "type": "object",
      "additionalProperties": { "$ref": "#/definitions/column_def" }
    }
  },
  "definitions": {
    "column_def": {
      "type": "object",
      "required": ["stattype"],
      "properties": {
        "stattype": { "$ref": "#/definitions/stattype" },
        "guess": { "$ref": "#/definitions/stattype" }
      }
    },
    "stattype": {
      "type": "string",
      "enum": ["CATEGORICAL", "NUMERICAL", "IGNORE"]
    }
  }
}
